

 <div class="main-geral-index">

   
   <ul class="grid-list">
     
     <% @articles.each do |article| %>
     <% unless article.archived? %>
     
     <li class="li-artigo">
       <%= link_to article.title, article %>
       
       
       <p><%= truncate(article.body, length: 30, omission: '...') %></p>
       
       <button class="btn-conferir"><%= link_to "Conferir", article %></button>
      </li>
      
      <% end %>
      <% end %>
      
    </ul>

    <ul>
      <li class="li-artigo-btn-new-artigo">

        <%= link_to "Novo Artigo", new_article_path, class: "btn btn-create-article" %>
      </li>
    </ul>
    

  </div>
