<div class="comment-item">
  <% unless comment.archived? %>
    <p>
      <strong>Autor: </strong>
      <%= comment.commenter %>
    </p>

    <p>
      <strong>Comentário: </strong>
      <%= comment.body %>
    </p>

    <p>
      <%= link_to "Apagar Comentário", [comment.article, comment], class: "delete-button", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Você tem certeza de que deseja DELETAR esse comentário?"
              } %>
    </p>
  <% end %>
</div>
